<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <div>
    <div class="photo">
      <img src="<%= @pin.image.url(:medium) %>">
    </div>
    <div>
      <p><%= "#{@pin.text}" %></p>
    </div>

  </div>
  <div>

    <hr/>
    <p>
      <b>Visit <%= "#{@pin.title}" %> at: </b>
      <%= link_to "#{@pin.url}", @pin.url, html_options = {target: "_blank", class: "url"} %>
    </p>
  </div>
</div>
<br/>
<%= link_to("/") do %>
  <i class="fa fa-angle-double-left"></i>
  back to home
<% end %>
